<div class="jumbotron jumbotron-fluid text-center" id="header">
    <h1 style="color: green; font-size: 100px;"> Don't Eat Da Beef Burger!!!!!!</h1>
</div>

<div class="container-fluid" id="body">
<div class="container-fluid">
<div class="row justify-content-center">
    <form class="create-form text-center col-6 mb-4">
<div class="form-group">
    <label for="burger" style="font-size: 30px; color:red"> Burger Name: </label>
    <input type="text" class="form" id="burger" name="nameburger">
</div>
<button type="submit" class="btn-primary" id="burger-button" style="background-color: green ; border: 2px solid green; margin-left: 170px; font-size:20px"> Add Burger </button>
    </form>
</div>

</div>


 <div class="container-fluid">
        <div class="row">
            <div class="col-5 ml-5">
                <div class="card mb-3">
                    <h2 class="text-center card-title pt-3">I need to be devoured!</h2>

                    <ul class="list-group card-body pl-3">
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-1"></div>
            <div class="col-5 ml-3">
                <div class="card mb-3">
                    <h2 class="text-center card-title pt-3">I've been devoured!</h2>

                    <ul class="list-group card-body pl-3">
                        {{#each burgers}}
                        {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
</div>